<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>.netstandard2.0</TargetFramework>
    <StartupObject>RaspberryPi.Program</StartupObject>
    <Platforms>AnyCPU;ARM32;ARM64</Platforms>
    <Trimming></Trimming>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="8.0.0" />
    <PackageReference Include="NLog.Extensions.Logging" Version="5.3.8" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Modules\RaspberryPi.Camera\RaspberryPi.Camera.csproj" />
    <ProjectReference Include="..\Modules\RaspberryPi.Client\RaspberryPi.Client.csproj" />
    <ProjectReference Include="..\Modules\RaspberryPi.Driving\RaspberryPi.Driving.csproj" />
    <ProjectReference Include="..\Modules\RaspberryPi.ModemServer\RaspberryPi.ModemServer.csproj" />
    <ProjectReference Include="..\Modules\RaspberryPi.Modem\RaspberryPi.Modem.csproj" />
    <ProjectReference Include="..\Modules\RaspberryPi.Mqtt\RaspberryPi.Mqtt.csproj" />
    <ProjectReference Include="..\Modules\RaspberryPi.Sensors\RaspberryPi.Sensors.csproj" />
    <ProjectReference Include="..\RaspberryPi.Common\RaspberryPi.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
